{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es7"],
    "module": "commonjs",
    "outDir": "dist",
    "target": "es6",
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "strict": true,
    "typeRoots" : ["./typings", "./node_modules/@types", "./node_modules/@ribajs/core/src/types"],
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
