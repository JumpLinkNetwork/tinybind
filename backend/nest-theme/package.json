{
  "name": "@ribajs/nest-theme",
  "version": "2.0.0-alpha.0",
  "description": "",
  "author": "Art+Code Studio (Pascal Garber) <pascal@artandcode.studio>",
  "license": "MIT",
  "main": "./dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run prebuild && npm run lint && tsc -p tsconfig.json",
    "clear": "rm -rf dist",
    "watch": "npm run build -- --watch",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx --ignore-pattern '*.spec.ts' --fix && npm run typecheck",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@happy-dom/server-rendering": "^2.5.0",
    "@nestjs/common": "^7.6.12",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.12",
    "@nestjs/platform-express": "^7.6.12",
    "@ribajs/core": "workspace:packages/core",
    "@ribajs/events": "workspace:packages/events",
    "@ribajs/ssr": "workspace:packages/ssr",
    "@types/consolidate": "^0.14.0",
    "@types/express": "^4.17.11",
    "@types/jsdom": "^16.2.6",
    "consolidate": "^0.16.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "find-root": "^1.1.0",
    "happy-dom": "^2.5.0",
    "jsdom": "^16.4.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "whatwg-encoding": "^1.0.5",
    "yaml": "next"
  },
  "peerDependencies": {
    "pug": "^3.0.0",
    "tinyliquid": "^0.2.34",
    "twig": "^1.15.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.12",
    "@types/cookie-parser": "^1.4.2",
    "@types/express-session": "^1.17.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
