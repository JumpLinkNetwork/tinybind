{
  "compilerOptions": {
    "module": "ESNEXT",
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "inlineSourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2015", "ESNext", "DOM"]
  }
}
