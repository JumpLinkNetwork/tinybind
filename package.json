{
  "name": "ribajs",
  "description": "Declarative data binding + templating solution.",
  "version": "1.8.0",
  "author": "Pascal Garber <pascal@artandcode.studio>",
  "contributors": [],
  "private": true,
  "url": "https://github.com/ribajs/riba",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/ribajs/riba/blob/master/LICENSE"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ribajs/riba.git"
  },
  "keywords": [
    "Bootstrap",
    "Bootstrap4",
    "Shopify",
    "Art+Code Studio",
    "Riba",
    "Rivets",
    "tinybind",
    "SPA",
    "TypeScript",
    "Browser"
  ],
  "scripts": {
    "packages:test": "cd packages/core && npm run test && cd ../bs4 && npm run test",
    "packages:type-check": "cd packages/core && npm run type-check && cd ../bs4 && npm run type-check",
    "packages:bump": "node tools/cli.js bump",
    "packages:publish": "node tools/cli.js publish",
    "packages:upgrade": "yarn upgrade-interactive && npm run packages:install && npm run packages:link",
    "packages:npm:upgrade": "node tools/cli.js upgrade && npm run packages:install && npm run packages:link",
    "packages:install": "yarn install",
    "packages:npm:install": "node tools/cli.js install",
    "packages:reinstall": "node tools/cli.js reinstall",
    "packages:link": "yarn link --all .",
    "packages:npm:link": "node tools/cli.js link",
    "packages:build": "node tools/cli.js build",
    "packages:configure": "npm run packages:configure:modules && npm run packages:configure:demos",
    "packages:configure:modules": "node tools/cli.js configure-modules",
    "packages:configure:demos": "node tools/cli.js configure-demos"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "chalk": "^3.0.0",
    "commander": "^4.1.1",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "yarn": "^2.0.0-rc.27"
  },
  "dependencies": {
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run packages:test",
      "pre-commit": "npm run packages:type-check"
    }
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "demos/*"
    ]
  },
  "resolutions": {
    "@ribajs/bs4": "portal:/home/jumplink/Projekte/riba/packages/bs4",
    "@ribajs/cli": "portal:/home/jumplink/Projekte/riba/packages/cli",
    "@ribajs/core": "portal:/home/jumplink/Projekte/riba/packages/core",
    "@ribajs/doc": "portal:/home/jumplink/Projekte/riba/packages/doc",
    "@ribajs/extras": "portal:/home/jumplink/Projekte/riba/packages/extras",
    "@ribajs/i18n": "portal:/home/jumplink/Projekte/riba/packages/i18n",
    "@ribajs/iconset": "portal:/home/jumplink/Projekte/riba/packages/iconset",
    "@ribajs/jquery": "portal:/home/jumplink/Projekte/riba/packages/jquery",
    "@ribajs/moment": "portal:/home/jumplink/Projekte/riba/packages/moment",
    "@ribajs/pdf": "portal:/home/jumplink/Projekte/riba/packages/pdf",
    "@ribajs/router": "portal:/home/jumplink/Projekte/riba/packages/router",
    "@ribajs/schematics": "portal:/home/jumplink/Projekte/riba/packages/schematics",
    "@ribajs/shopify": "portal:/home/jumplink/Projekte/riba/packages/shopify",
