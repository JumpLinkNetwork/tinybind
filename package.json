    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "prettier": "^1.19.1",
    "yarn": "^2.0.0-rc.27"
  },
  "dependencies": {
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run packages:test",
      "pre-commit": "npm run packages:type-check"
    }
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "demos/*"
    ]
  },
